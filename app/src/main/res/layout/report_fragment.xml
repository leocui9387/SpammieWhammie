<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:layout_margin="@dimen/report_margin"
    >
    <Switch
        android:paddingVertical="10dp"
        android:id="@+id/report_form_switch_wasPrerecorded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_form_switch_wasPrerecorded" />

    <Switch
        android:paddingVertical="10dp"
        android:id="@+id/report_form_switch_isMobileCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_form_switch_isMobileCall" />
    <Switch
        android:paddingVertical="10dp"
        android:id="@+id/report_form_switch_askedToStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_form_switch_askedToStop" />
    <Switch
        android:paddingVertical="10dp"
        android:id="@+id/report_form_switch_haveDoneBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_form_switch_haveDoneBusiness" />

        <Spinner
            android:paddingVertical="10dp"
            android:id="@+id/report_form_subjectMatter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_form_hint_subjectMatter"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_form_caller_name"
        android:imeOptions="actionNext"
        android:inputType="textImeMultiLine"
        android:hint="@string/report_form_hint_caller_name">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_form_comments"
        android:imeOptions="actionNext"
        android:inputType="textImeMultiLine"
        android:hint="@string/report_form_hint_comments">
    </EditText>

    <Button
        android:id="@+id/report_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_form_button_text" />

    <com.google.android.gms.ads.AdView
        android:paddingTop="20dp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/report_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2984887454634255/2175184119"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>
